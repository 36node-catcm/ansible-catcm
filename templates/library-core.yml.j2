---
apiVersion: v1
kind: Service
metadata:
  name: library-core
  labels:
    app: library-core
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: library-core
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: library-core
  labels:
    app: library-core
spec:
  replicas: 1
  selector:
    matchLabels:
      app: library-core
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: library-core
    spec:
      restartPolicy: Always
      containers:
        - name: library-core
          image: "{{ library_core_image }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ library_core_time }}"
            - name: PORT
              value: "{{ library_core_port }}"
            - name: BASE
              value: "{{ library_core_path }}"
            - name: MONGODB_CONNECTION
              value: "{{ library_core_mongodb_connection }}"
          ports:
            - name: http
              containerPort: 80
          readinessProbe:
            httpGet:
              path: "{{ library_core_health_path }}"
              port: 80
            initialDelaySeconds: 5
            periodSeconds: 60
          livenessProbe:
            httpGet:
              path: "{{ library_core_health_path }}"
              port: 80
            initialDelaySeconds: 5
            periodSeconds: 60
          resources:
            limits:
              cpu: "1000m"
              memory: "1Gi"
            requests:
              cpu: "10m"
              memory: "32Mi"