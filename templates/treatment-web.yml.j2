---
apiVersion: v1
kind: Service
metadata:
  name: treatment-web
  labels:
    app: treatment-web
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: treatment-web
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: treatment-web
  labels:
    app: treatment-web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: treatment-web
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: treatment-web
    spec:
      restartPolicy: Always
      containers:
        - name: treatment-web
          imagePullPolicy: "{{ image_pull_policy }}"
          image: "{{ treatment_web_image }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ treatment_web_time }}"
            - name: REACT_APP_TITLE
              value: "民间中医特色诊疗技术信息管理系统"
            - name: REACT_APP_SYS_TYPE
              value: "TREATMENT"
            - name: REACT_APP_CORE_BASE
              value: "{{ treatment_web_core_base }}"
            - name: REACT_APP_ROOT_NS
              value: "{{ treatment_web_root_ns }}"
            - name: REACT_APP_AUTH_PROVIDER
              value: "{{ treatment_web_auth_provider }}"
            - name: REACT_APP_OSS_BUCKET
              value: "{{ treatment_web_oss_bucket }}"
          ports:
            - name: http
              containerPort: 80
          resources:
            limits:
              cpu: "1000m"
              memory: "1Gi"
            requests:
              cpu: "10m"
              memory: "32Mi"